<!-- Popup modal to edit email or password -->

<div id="modal2" class="modal">
  <div class="modal-content">
    <h5>Edit Your Email and Password</h5>
    <form action="/edit/details" method="post">
      <input type="hidden" value="patch" name ="_method">

        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate" name="email" value="<%=@user.email%>">
            <label for="email" data-error="wrong">Email</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password" required="" aria-required="true" value="<%@user.password%>">
            <label for="password">Password</label>
          </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
         <i class="material-icons right">done_all</i>
       </button>

       <button class="red darken-3 btn waves-effect waves-light modal-action modal-close" type="submit" name="action">Close
        <i class="material-icons right">clear</i>
      </button>
    </form>
  </div>
</div>


