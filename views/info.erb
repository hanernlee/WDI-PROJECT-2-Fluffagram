     <div id="middle" class="section white">
       <div class="row container">
          <div class="image_content">
              <img src="<%= @info.img_url%>">
              <a id="comment_btn" class="btn-floating btn-large red modal-trigger" href="#modal1"><i class="large material-icons">mode_edit</i></a>

              <%if @info.user_id == current_user.id %>
              <div class="">
                <form action="/edit/<%=@info.id%>" method="post">
                  <input type="hidden" value="delete" name="_method">
                    <button id="delete_show" class="red darken-4 btn-floating btn-large waves-effect waves-light red btn"><i class="material-icons">delete</i></button>
                </form>
              </div>
              <%end%>

            <div class="col s6 offset-s6">
              <div id="pawinfo" class=" transparent chip">
                <a href="/likes/<%= @info.id%>"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/Black_Paw.svg/852px-Black_Paw.svg.png"><%=@likes%></a>
              </div>
            </div>
          </div>


          <div id="comment_box">
            <% @comments.each do |comment| %>
              <div id="commentbub" class="col s12 chip"><%= comment.user.username%> commented <b>"<%= comment.body %>"</b></div>
            <% end %>
          </div>

           <!-- Modal Structure -->
           <div id="modal1" class="modal">
             <div class="modal-content">
               <form class="col s12" action="/info/<%= @info.id%>/comments" method ="post">
                 <textarea length="30" id="textarea1" class="materialize-textarea" name ="body" required="" aria-required="true" length="30"></textarea>
             <div class="modal-footer">
               <button class="modal-action modal-close btn waves-effect waves-light">Comment<i class="material-icons right">comment</i></button>
             </form>
             </div>
           </div>
         </div>
       </div>
     </div>

